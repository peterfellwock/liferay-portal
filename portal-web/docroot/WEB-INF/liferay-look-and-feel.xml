<?xml version="1.0"?>
<!DOCTYPE look-and-feel PUBLIC "-//Liferay//DTD Look and Feel 7.0.0//EN" "http://www.liferay.com/dtd/liferay-look-and-feel_7_0_0.dtd">

<look-and-feel>
	<compatibility>
		<version>7.0.0+</version>
	</compatibility>
	<company-limit>
		<company-includes />
		<company-excludes />
	</company-limit>
	<theme id="mobile" name="Mobile">
		<root-path>/wap/themes/${theme-id}</root-path>
		<settings>
			<setting configurable="true" key="bullet-style" options="dots,arrows" type="select" value="dots" />
		</settings>
		<wap-theme>true</wap-theme>
	</theme>
</look-and-feel>